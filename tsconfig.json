{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "rootDir": "src",
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"]
}
